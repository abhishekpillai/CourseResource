
<div id="admin_school" class="hero-unit">
	<h2>Add a school!</h2>
	<%= form_for(@school) do |f| %>
	  <% if @school.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@school.errors.count, "error") %> prohibited this user from being saved:</h2>

	      <ul>
	      <% @school.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field">
	    <%= f.label :name %>
	    <%= f.text_field :name %>
	  </div>
	  <div class="field">
	    <%= f.label :city %>
	    <%= f.text_field :city %>
	  </div>
	  <div class="field">
	    <%= f.label :state %>
	    <%= f.text_field :state %>
	  </div>
	  <div class="field">
	    <%= f.label :zipcode %>
	    <%= f.text_field :zipcode %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
</div>
<%= link_to "Back", root_url %>