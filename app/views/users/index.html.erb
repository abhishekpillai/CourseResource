<h1>Listing users</h1>

<table border=1>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Password</th>
    <th>School</th>
    <th>Year in school</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= School.find_by_id(user.school_id).name if School.find_by_id(user.school_id).present? %></td>
    <td><%= user.year_in_school %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

